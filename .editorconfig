# References:
# - https://github.com/segmentio/terraform-docs/blob/master/.editorconfig
# - https://editorconfig-specification.readthedocs.io/en/latest/
root = true

[*]
charset = utf-8
end_of_line = lf
indent_style = space
indent_size = 4
trim_trailing_whitespace = true
insert_final_newline = true

[*.{yaml,yml}]
indent_size = 2

[*.{tf,tfvars}]
indent_size = 2

[Makefile]
indent_style = tab
